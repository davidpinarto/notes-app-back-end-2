									"        mode: 'raw',",
									"        raw: JSON.stringify({",
									"            username: 'testing',",
									"            password: pm.environment.get('newPassword'),",
									"            fullname: pm.environment.get('newFullname')",
									"        }),",
									"    },",
									"};",
